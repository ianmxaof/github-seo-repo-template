{
  "id": "open-source-maintainer",
  "name": "Open Source Maintainer",
  "description": "Optimizes repos for contributors, users, and sponsors discovering and evaluating open-source projects.",
  "audience": "Potential contributors, maintainers, and sponsors.",
  "tone": "technical",
  "targetPlatforms": ["library", "framework", "cli-tool", "github-action"],
  "exampleRepos": [
    "https://example.com/placeholder-oss-repo-1",
    "https://example.com/placeholder-oss-repo-2"
  ],
  "namingRules": {
    "requirePrimaryTech": true,
    "allowBrandingPrefix": true,
    "maxLength": 35,
    "discourageCutesyNames": true
  },
  "descriptionRules": {
    "minLength": 60,
    "maxLength": 160,
    "mustMentionAudience": false,
    "mustMentionPlatform": true,
    "mustMentionValueProp": true
  },
  "readmeRequirements": {
    "requireH1": true,
    "requireWhatWhoPlatformIntro": true,
    "requiredSections": [
      "What This Is",
      "Installation",
      "Usage",
      "Configuration",
      "Contributing",
      "License"
    ],
    "recommendedSections": ["Code of Conduct", "Sponsors", "Changelog"],
    "minWordCount": 600,
    "maxWordCount": 4000
  },
  "topicProfile": {
    "minCount": 5,
    "maxCount": 15,
    "requiredTopics": ["open-source"],
    "recommendedTopics": ["library", "developer-tools"]
  },
  "linkingExpectations": {
    "requireDocsLink": true,
    "requireIssueTrackerLink": true,
    "requireHomepageOrDemoLink": false
  },
  "weights": {
    "nameClarity": 1.0,
    "descriptionQuality": 1.1,
    "topicCoverage": 1.1,
    "readmeStructure": 1.4,
    "activityRecency": 1.0,
    "metadataHygiene": 1.3
  }
}

