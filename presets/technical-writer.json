{
  "id": "technical-writer",
  "name": "Technical Writer",
  "description": "Optimizes repos for documentation-heavy projects: clear structure, examples, and audience-focused READMEs.",
  "audience": "Developers and technical readers who rely on docs and examples.",
  "tone": "technical",
  "targetPlatforms": ["documentation", "library", "api", "cli-tool"],
  "exampleRepos": [
    "https://example.com/placeholder-docs-repo-1"
  ],
  "namingRules": {
    "requirePrimaryTech": false,
    "allowBrandingPrefix": true,
    "maxLength": 45,
    "discourageCutesyNames": true
  },
  "descriptionRules": {
    "minLength": 60,
    "maxLength": 160,
    "mustMentionAudience": true,
    "mustMentionPlatform": true,
    "mustMentionValueProp": true
  },
  "readmeRequirements": {
    "requireH1": true,
    "requireWhatWhoPlatformIntro": true,
    "requiredSections": ["What This Is", "Installation", "Usage", "Examples", "API or Reference", "Contributing", "License"],
    "recommendedSections": ["Changelog", "Related Projects"],
    "minWordCount": 800,
    "maxWordCount": 5000
  },
  "topicProfile": {
    "minCount": 5,
    "maxCount": 15,
    "requiredTopics": [],
    "recommendedTopics": ["documentation", "examples", "developer-tools"]
  },
  "linkingExpectations": {
    "requireDocsLink": true,
    "requireIssueTrackerLink": true,
    "requireHomepageOrDemoLink": false
  },
  "weights": {
    "nameClarity": 1.0,
    "descriptionQuality": 1.1,
    "topicCoverage": 0.9,
    "readmeStructure": 1.5,
    "activityRecency": 0.7,
    "metadataHygiene": 1.0
  }
}
